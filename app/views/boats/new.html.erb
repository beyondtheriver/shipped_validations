<%= flash[:alert] if flash[:alert] %>
<% if current_user %>
  <%= form_for @boat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :con_capacity %>
  <%= f.text_field :con_capacity %><br>
  <%= f.label :location %>
  <%= f.select :location, ["San Fran", "New Bedford", "Nantucket", "Miami", "Philadelphia", "LA", "Baltimore", "Montevideo"]%><br>

  <%= f.hidden_field :user_id, :value => current_user.id.to_i %>
  <%= f.submit "New Boat" %>
  <% end %>
<% end %>
