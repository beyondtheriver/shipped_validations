<%= @boat.name  %><br>
<%= @boat.con_capacity %><br>
<%= @boat.location %><br>
<%= form_for @job do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :con_require %>
  <%= f.text_field :con_require%><br>
  <%= f.label :cost %>
  <%= f.text_field :cost%><br>
  <%= f.label :cargo %>
  <%= f.text_field :cargo%><br>
  <%= f.label :origin %>
  <%= f.text_field :origin%><br>
  <%= f.label :destination %>
  <%= f.text_field :destination%><br>

  <%= f.hidden_field :boat_id, :value => @boat.id %>
  <%= f.submit "New Job" %>
<% end %>
<% @jobs.each do |job| %>
 Name: <%= job.name %><br>
 Containers Required: <%= job.con_require %><br>
 Cost: $<%= job.cost %><br>
 Cargo: <%= job.cargo %><br>
 Origin: <%= job.origin %><br>
 Destination: <%= job.destination %><br>
<% end %>

