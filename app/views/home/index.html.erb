<h1>So You Think You Can Ship</h1>
<center>
   <%= link_to "Log In", new_user_session_path, :id => "loginbutton", :method => :get unless current_user %>
   <br>
   <%= link_to "Sign Up", new_user_registration_path, :id => "signupbutton", :method => :get unless current_user %>
   <br>
</center>

<% if current_user %>
  <%= link_to "New Boat", new_boat_path, :id => "newboat", :method => :get %><br>
  <% @boats.each do |boat| %>
  <div id="boatinfo">
    <%= boat.name %><br>
    <%= boat.con_capacity %><br>
    <%= boat.location %><br>
    <%= link_to boat.name, boat_path(boat.id), :method => :get %><br>
  <% end %>
   </div>
<% end %>

<%= link_to "Log Out", destroy_user_session_path, :id => "logoutbutton", :method => :delete if current_user %><br>
