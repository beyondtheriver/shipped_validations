<%= link_to "Log In", new_user_session_path, :method => :get unless current_user %>
<br>
<%= link_to "Sign Up", new_user_registration_path, :method => :get unless current_user %>
<br>
<%= link_to "Log Out", destroy_user_session_path, :method => :delete if current_user %><br>

<% if current_user %>
  <%= link_to "New Boat", new_boat_path, :method => :get %><br>
  <% @boats.each do |boat| %>
    <%= boat.name %><br>
    <%= boat.con_capacity %><br>
    <%= boat.location %><br>
    <%= link_to boat.name, boat_path(boat.id), :method => :get %><br>
  <% end %>
<% end %>
